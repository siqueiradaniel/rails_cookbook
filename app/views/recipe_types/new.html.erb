<h1> Cadastro de Tipo de Receita </h1>

<% if flash[:notice] %>
    <div style="margin: 10px 0px">
        <%= flash[:notice] %>
    </div>
<%end%>

<%= form_with model: @recipe_type do |f| %>
    <div>
        <%=f.label :name, 'Nome'%>
        <%=f.text_field :name%>
    </div>

    <div>
        <%= f.submit 'Salvar'%>
    </div>
<%end%>